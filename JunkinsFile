pipeline {
    agent any

    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/MSPRBLOC4/serviceCommande.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'python3 -m venv venv'
                sh './venv/bin/pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                sh './venv/bin/pytest --cov=. tests/ --cov-report xml'
            }
        }

        stage('Coverage Report') {
            steps {
                junit 'coverage.xml'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('mspr2')
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Déploiement automatique ici...'
                // sh 'docker-compose up -d' ou autre
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé.'
        }
    }
}
